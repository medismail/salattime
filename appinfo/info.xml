<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>salattime</id>
    <name>Salat Time</name>
    <summary>Show 5 times prayer.</summary>
    <description><![CDATA[# Salat Time
 * 5 muslim daily prayer times
 * Hijri date with optional auto adjustment according to local observation capability
 * Qibla direction degrees and according to the sun and/or moon position
 * DAV Calendar Integration for prayer times and hijri date
 * Adhan notification
 * Widget on Dashboard
 * and many others useful informations.]]></description>
    <version>0.8.0</version>
    <licence>agpl</licence>
    <author mail="imejri@hotmail.com" >Mohamed</author>
    <website>https://github.com/medismail/salattime</website>
    <namespace>SalatTime</namespace>
    <types>
        <dav/>
    </types>
    <category>tools</category>
    <bugs>https://github.com/medismail/salattime/issues</bugs>
    <screenshot>https://raw.githubusercontent.com/medismail/salattime/main/img/salattime.png</screenshot>
    <dependencies>
        <nextcloud min-version="29" max-version="32"/>
    </dependencies>
    <navigations>
        <navigation>
            <name>Salat Time</name>
            <route>salattime.page.index</route>
        </navigation>
    </navigations>
    <sabre>
        <calendar-plugins>
            <plugin>OCA\SalatTime\DAV\CalendarPlugin</plugin>
        </calendar-plugins>
    </sabre>
    <background-jobs>
        <job>OCA\SalatTime\IslamicNetwork\Hijri\HijriBackgroundJob</job>
    </background-jobs>
</info>
